                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <button type="submit" class="btn btn-light px-5" onsubmit="sendDataUser()"><i
                                                        class="icon-lock"></i> Enregistrer</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                            <!--Start footer-->
                            <%- include('footer'); %>
                                <!--End footer-->

                                <!--start color switcher-->
                                <%- include('parametre'); %>
